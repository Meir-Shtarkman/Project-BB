#ifndef _CITIZEN_H
#define _CITIZEN_H


#include <iostream>


class Ballot;

using namespace std;
class Citizen
{
private:
	char* Name;
	char id[10];
	int BirthYear;
	Ballot* ballot;
	bool candidate;
public:
	char* getName();
	char* getID();
	int getBirthYear();
	Ballot* getBallot();
	bool getCandidate();

	bool setName(char* temp);
	bool setID(char* temp);
	bool setBirthday(const int& temp);
	bool setBallot(Ballot* temp);
	void setCandidate(const bool& temp);

	void ShowCivilian();
};



#endif // !_CITIZEN_H





