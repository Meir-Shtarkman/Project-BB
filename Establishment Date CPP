#include "establishment_date.h"

int Establishment_Date::getYear()
{
	return year;
}
int Establishment_Date::getMonth()
{
	return month;
}
int Establishment_Date::getday()
{
	return day;
}

bool Establishment_Date::setYear(const int& temp)
{
	if (temp >= 1 && temp <= 2020)
	{
		year = temp;
		return true;
	}
	else return false;
}
bool Establishment_Date::setMonth(const int& temp)
{
	if (temp >= 1 && temp <= 12)
	{
		month = temp;
		return true;
	}
	else return false;
}
bool Establishment_Date::setDay(const int& temp)
{
	if (temp >= 1 && temp<=31)
	{
		day = temp;
		return true;
	}
	else return false;
}

void Establishment_Date::showEstablismentDate()
{
	cout << getday() << "." << getMonth() << "." << getYear() <<
		endl;
}
