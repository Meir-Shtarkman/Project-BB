#ifndef _CITIZEN_H
#define _CITIZEN_H

#include <iostream>
#include "Ballot.h"

using namespace std;
class Citizen
{
private:
	char* Name;
	char id[10];
	int BirthYear;
	Ballot* ballot;
	bool candidate;
public:
	char* getName();
	char* getID();
	int getBirthYear();
	Ballot& getBallotID();
	bool getCandidate();

	bool setName(char* temp);
	bool setID(char* temp);
	bool setBirthday(int temp);
	bool setBallot(Ballot* temp);
	bool setCandidate(char temp);
};



#endif // !_CITIZEN_H






